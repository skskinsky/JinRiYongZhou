<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_body_bg"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/activity_command_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:text="我的邀请码为："
        android:textColor="@color/setting_yaoqingma"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/tv_invitation_code"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:background="@drawable/bac_green"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:text="ABCDEFG12345"
            android:textColor="@color/setting_yaoqingma"
            android:textSize="16sp" />

        <Button
            android:id="@+id/bt_invitation_copy"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:background="@color/common_color"
            android:gravity="center"
            android:text="复  制"
            android:textColor="#fff"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/setting_yaoqingma"
            android:text="将今日永州推荐给好友："
            android:textSize="16sp" />

        <com.dingtai.base.view.MyGridView
            android:id="@+id/gvShare"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:horizontalSpacing="5dp"
            android:numColumns="5" />
    </LinearLayout>

</LinearLayout>