<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
       >

        <TextView
            android:id="@+id/tv_PoliticsAreaName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="体育局"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"/>

        <ImageView
            android:id="@+id/iv_IsPolitic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yidingy"
            android:layout_marginRight="8dp"
             />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/gongan"
            />

        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="2"
            android:text="公安局按级别通常有:直辖市公安局、省会城市公安局、地级市公安局、县级市公安局直辖市公安局、省会城市公安局、地级市公安局、县级市公安局直辖市公安局、省会城市公安局、地级市公安局、县级市公安局"
            android:textColor="@color/Text4CGreyColor"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:ellipsize="end"
            />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/setting_underline" />

</LinearLayout>