<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lvItem_layout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="7dp"
            android:paddingRight="7dp">

            <com.dingtai.base.view.BaseTextView
                android:id="@+id/txtPictureTitleStyle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingTop="5dp"
                android:text="副标题 副标题 副标题 副标题 副标题 副标题 副标题 副标题 副标题 副标题 "
                android:textColor="@color/common_list_titlebar_font"
                android:textSize="@dimen/news_main_title_size" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgPictureList1Style1"
                    android:layout_width="@dimen/news_line_image_width"
                    android:layout_height="@dimen/news_line_image_height"
                    android:layout_alignParentLeft="true"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/imgPictureList2Style1"
                    android:layout_width="@dimen/news_line_image_width"
                    android:layout_height="@dimen/news_line_image_height"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/imgPictureList3Style1"
                    android:layout_width="@dimen/news_line_image_width"
                    android:layout_height="@dimen/news_line_image_height"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitXY" />
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/frame_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/imgPictureList3Style1"
                android:layout_below="@id/txtPictureTitleStyle1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.dingtai.base.view.BaseTextView
                        android:id="@+id/txtPictureSummaryStyle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:lineSpacingExtra="3dp"
                        android:maxLines="2"
                        android:text="副标题 副标题 副标题 副标题 副标题 副标题 副标题 副标题 副标题 副标题 "
                        android:textColor="@color/common_list_titlebar_fu_font"
                        android:textSize="@dimen/index_fu_title_size" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <com.dingtai.base.view.BaseTextView
                            android:id="@+id/txtypeStyle5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:gravity="center_vertical"
                            android:text="  99"
                            android:textColor="@color/news_list_other_font"
                            android:textSize="14sp" />

                        <com.dingtai.base.view.BaseTextView
                            android:id="@+id/txtPictureSubscriptStyle1"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_toRightOf="@+id/txtypeStyle5"
                            android:gravity="center"
                            android:paddingBottom="1dp"
                            android:paddingTop="1dp"
                            android:paddingLeft="7dp"
                            android:paddingRight="7dp"
                            android:text="角标"
                            android:textColor="#31c37c"
                            android:textSize="10sp" />


                        <com.dingtai.base.view.BaseTextView
                            android:id="@+id/txtPictureNumStyle1"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_marginRight="12dp"
                            android:layout_toLeftOf="@+id/txtPictureZanStyle1"
                            android:text="0 图"
                            android:textColor="@color/news_list_other_font"
                            android:textSize="14sp"
                            android:visibility="gone" />

                        <com.dingtai.base.view.BaseTextView
                            android:id="@+id/txtPictureReviewStyle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:drawableLeft="@drawable/list_reply"
                            android:gravity="center"
                            android:text=" 99"
                            android:textColor="@color/news_list_other_font"
                            android:textSize="@dimen/index_subscript_size"
                            android:visibility="visible" />

                        <com.dingtai.base.view.BaseTextView
                            android:id="@+id/txtPictureZanStyle1"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="12dp"
                            android:layout_toRightOf="@id/txtPictureReviewStyle1"
                            android:drawableLeft="@drawable/dt_standard_shouye_shijian"
                            android:gravity="center_vertical"
                            android:text=" 99"
                            android:textColor="@color/news_list_other_font"
                            android:textSize="@dimen/index_subscript_size" />
                    </RelativeLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <!--
         <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@color/dt_list_item_underline" />
    -->

</LinearLayout>