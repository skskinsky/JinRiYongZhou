<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center" >

    <ImageView
        android:id="@+id/iv_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/linear_layout_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_banner"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:background="@drawable/index_readno_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:drawableLeft="@drawable/index_news_readno"
            android:drawablePadding="2dp"       
            android:lines="1"
            android:text="100人"
            android:typeface="sans"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_banner" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:lines="2"
            android:lineSpacingMultiplier="0.9"
            android:paddingBottom="1dp"
            android:textColor="@color/Text4CGreyColor"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linear_layout"
        android:layout_marginTop="5dp"
        android:lines="1"
        android:text="今日郴州为您推荐"
        android:textColor="@color/Text60GreyColor"
        android:textSize="12sp"
        android:visibility="gone" />

</RelativeLayout>