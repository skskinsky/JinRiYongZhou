<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lvItem_layout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_body_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/lvItem_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.dingtai.base.view.BaseTextView
            android:id="@+id/txtNewsTitleStyle4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="副标题 副标题 副标题 副标题 副标题 副标题 副标题 副标题 副标题 副标题 "
            android:textColor="@color/common_list_titlebar_font"
            android:textSize="15sp" />

        <FrameLayout
            android:id="@+id/flSummay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtNewsTitleStyle4" >

            <com.dingtai.base.view.BaseTextView
                android:id="@+id/txtNewsSummaryStyle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:lineSpacingExtra="3dp"
                android:maxLines="2"
                android:text="副标题 副标题 副标题 副标题 副标题 副标题 副标题 副标题 副标题 副标题 "
                android:textColor="@color/common_list_titlebar_fu_font"
                android:textSize="@dimen/index_fu_title_size" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flSummay">

            <View
                android:id="@+id/vNewsSubscriptStyle4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentRight="true" />

            <com.dingtai.base.view.BaseTextView
                android:id="@+id/txtNewsSubscriptStyle4"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_toLeftOf="@id/vNewsSubscriptStyle4"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="角标"
                android:textColor="#31c37c"
                android:textSize="@dimen/index_subscript_size" />

            <com.dingtai.base.view.BaseTextView
                android:id="@+id/txtypeStyle4"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@id/txtNewsSubscriptStyle4"
                android:drawableLeft="@drawable/list_reply"
                android:gravity="center_vertical"
                android:text="  99"
                android:textColor="@color/news_list_other_font"
                android:textSize="14sp"
                android:visibility="gone" />

            <com.dingtai.base.view.BaseTextView
                android:id="@+id/txtNewsReviewStyle4"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:drawableLeft="@drawable/mutual_read_num_img"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="角标"
                android:textColor="@color/news_list_other_font"
                android:textSize="@dimen/index_subscript_size" />

            <com.dingtai.base.view.BaseTextView
                android:id="@+id/txtNewsZanStyle4"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"
                android:layout_toRightOf="@id/txtNewsReviewStyle4"
                android:drawableLeft="@drawable/list_shijian"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text=" 99"
                android:textColor="@color/news_list_other_font"
                android:textSize="@dimen/index_subscript_size" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@color/dt_list_item_underline" />

</LinearLayout>