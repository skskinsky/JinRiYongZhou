<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_body_bg"
   >

    <LinearLayout
        android:id="@+id/login_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/activity_command_title" />

        <RelativeLayout
            android:id="@+id/login_bar"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@color/common_body_bg"
            android:visibility="gone" >

            <ImageButton
                android:id="@+id/login_return"
                android:layout_width="48dp"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:background="@null"
                android:src="@drawable/dt_standard_public_backbtnimgforxhs" />

            <TextView
                android:id="@+id/login_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="登 录"
                android:textColor="@color/common_titlebar_font"
                android:textSize="@dimen/common_titlebar_size" />

            <TextView
                android:id="@+id/login_registerbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dip"
                android:text="注册"
                android:textColor="#FFF"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_rel1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="35dip"
            android:layout_marginRight="35dip"
            android:layout_marginTop="20dip" >

            <ImageView
                android:id="@+id/login_usernameimg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="7dp"
                android:scaleType="fitXY"
                android:src="@drawable/dt_standard_signin_user" />

            <EditText
                android:id="@+id/login_username_et"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_alignBaseline="@id/login_usernameimg"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/login_usernameimg"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入帐号"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="#A1A1A1"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/zhanghaodelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="7dp"
                android:scaleType="fitXY"
                android:src="@drawable/dt_standard_index_right_delete"
                android:visibility="gone" />

            <View
                android:id="@+id/login_bottom_view1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/common_color" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_rel2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="35dip"
            android:layout_marginRight="35dip"
            android:layout_marginTop="20dip" >

            <ImageView
                android:id="@+id/login_userpswimg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="7dp"
                android:scaleType="fitXY"
                android:src="@drawable/register_password" />

            <TextView
                android:id="@+id/login_userpwd_et_hint"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_alignBaseline="@id/login_userpswimg"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/login_userpswimg"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="请输入登录密码"
                android:textColor="#A1A1A1"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/login_userpwd_et"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_alignBaseline="@id/login_userpswimg"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/login_userpswimg"
                android:background="@null"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:maxLength="12"
                android:textColor="#A1A1A1"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/mimadelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="7dp"
                android:scaleType="fitXY"
                android:src="@drawable/dt_standard_index_right_delete"
                android:visibility="gone" />

            <View
                android:id="@+id/login_bottom_view2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/common_color" />
        </RelativeLayout>

        <TextView
            android:id="@+id/login_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="30dip"
            android:background="@drawable/dt_standard_gerenzhongxin_login"
            android:gravity="center"
            android:text="登  录"
            android:textColor="#fff"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="10dip" >

            <TextView
                android:id="@+id/login_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:text="立即注册"
                android:textColor="@color/edit_text_font"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/login_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="忘记密码？"
                android:textColor="@color/edit_text_font"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/login_linear" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dip"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/login_noticeimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/dt_standard_registeruserpage_noticeimg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/login_sinaimg"
                    android:layout_width="wrap_content"
                    android:layout_height="95dp"
                    android:layout_weight="0.98"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/login_xinglang"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:text="新浪微博"
                    android:textColor="@color/common_list_titlebar_font"
                    android:textSize="12sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/login_qqimg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.00"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/login_qq"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:text="QQ"
                    android:textColor="@color/common_list_titlebar_font"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/login_weixinimg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/login_weixing"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:text="微信"
                    android:textColor="@color/common_list_titlebar_font"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>