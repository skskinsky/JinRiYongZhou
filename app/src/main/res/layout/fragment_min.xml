<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="民"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/setting_underline" />

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#60000000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="123321"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:id="@+id/tv_wendu" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_below="@+id/tv_wendu"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/tv_qihou"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="123321"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:paddingLeft="20dp"/>

                <TextView
                    android:id="@+id/tv_dizhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123321"
                    android:textColor="@color/white"
                    android:paddingRight="10dp"
                    android:textSize="16sp"/>



            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:background="@color/setting_underline"
        android:gravity="center_vertical"
        android:text="政务服务"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_gongjijin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/gongji"
            android:gravity="center"
            android:padding="10dp"
            android:text="公积金查询"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_weizhang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/weizhang"
            android:gravity="center"
            android:padding="10dp"
            android:text=" 违章查询"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_shuifei"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/shuifei"
            android:gravity="center"
            android:padding="10dp"
            android:text=" 水费缴纳"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_dianfei"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/dianfei"
            android:gravity="center"
            android:padding="10dp"
            android:text=" 电费缴纳"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/setting_underline"
        android:gravity="center_vertical"
        android:text="    生活服务"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_hangban"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/hangban"
            android:gravity="center"
            android:padding="10dp"
            android:text=" 航班预定"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_piaowu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/piaowu"
            android:gravity="center"
            android:padding="10dp"
            android:text=" 票务购买"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_jiudian"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/jiudian"
            android:gravity="center"
            android:padding="10dp"
            android:text=" 酒店预定"
            android:textSize="12sp" />


        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>

    </LinearLayout>
</LinearLayout>