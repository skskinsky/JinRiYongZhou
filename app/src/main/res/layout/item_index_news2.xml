<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/item_splite_color" />

    <ImageView
        android:id="@+id/news_img"
        android:layout_width="123dp"
        android:layout_height="70dp"
        android:layout_below="@+id/line"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/default_icon"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/news_img"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/news_img"
        android:maxLines="2"
        android:text="彭国富的点点滴滴多多多多多多多多多多多多多多多多多多"
        android:textColor="@color/Text40GreyColor"
        android:textSize="18sp"
        android:typeface="sans" />

    <com.dingtai.base.view.BaseTextView
        android:id="@+id/news_plnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tv_channelName"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:paddingBottom="1dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="1dp"
        android:textColor="@color/Text60GreyColor"
        android:textSize="10sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/tv_readNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/list_reply"
        android:gravity="center"
        android:text=""
        android:textColor="@color/news_list_other_font"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_channelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/news_img"
        android:gravity="center_vertical"
        android:text="政情"
        android:textColor="@color/news_list_other_font"
        android:textSize="14sp" />
</RelativeLayout>