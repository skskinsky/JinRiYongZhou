<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_body_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/yanzheng_title"
        layout="@layout/activity_command_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="41dp"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/dt_standard_signin_phone" />

                <EditText
                    android:id="@+id/etphone"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/iv1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入手机号码"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColor="#A1A1A1"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/hint_font_size" />

                <ImageView
                    android:id="@+id/zhangdelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="7dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dt_standard_index_right_delete"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:background="@color/common_color" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="41dp"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/register_yanzhengma" />

                <Button
                    android:id="@+id/tvhuoqu"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bac_green"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/common_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etyanzheng"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@id/tvhuoqu"
                    android:layout_toRightOf="@id/iv2"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="验证码"
                    android:inputType="phone"
                    android:maxLength="12"
                    android:textColor="#A1A1A1"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/hint_font_size" />
            </RelativeLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:background="#FFDEDEDE" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="41dp"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/register_password" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/etpassword_hint"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:text="请输入登录密码"
                        android:textColor="#A1A1A1"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/hint_font_size" />

                    <EditText
                        android:id="@+id/etpassword"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:inputType="textPassword"
                        android:maxLength="16"
                        android:textColor="#A1A1A1"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/hint_font_size" />

                    <ImageView
                        android:id="@+id/midelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="7dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dt_standard_index_right_delete"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:background="#FFDEDEDE" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="41dp"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/register_password" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/etrespassword_hint"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:text="请再次输入登录密码"
                        android:textColor="#A1A1A1"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/hint_font_size" />

                    <EditText
                        android:id="@+id/etrespassword"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:inputType="textPassword"
                        android:maxLength="16"
                        android:textColor="#A1A1A1"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/hint_font_size" />

                    <ImageView
                        android:id="@+id/mi2delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="7dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dt_standard_index_right_delete"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:background="#FFDEDEDE" />

            <CheckBox
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="20dp"
                android:text="更多信息"
                android:textSize="@dimen/hint_font_size"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/more_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="41dp"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv5"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/register_password" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp">

                        <TextView
                            android:id="@+id/invitecode_hint"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:text="请输入邀请码(选填)"
                            android:textColor="#A1A1A1"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/hint_font_size" />

                        <EditText
                            android:id="@+id/invitecode"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:textColor="#A1A1A1"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/hint_font_size" />

                        <ImageView
                            android:id="@+id/invitecode_del"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="7dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/dt_standard_index_right_delete"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:id="@+id/view5"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    android:background="#FFDEDEDE" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="41dp"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv6"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/register_password" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp">

                        <TextView
                            android:id="@+id/deptname_hint"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:text="所在地或者单位名称"
                            android:textColor="#A1A1A1"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/hint_font_size" />

                        <EditText
                            android:id="@+id/deptname"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:maxLength="6"
                            android:textColor="#A1A1A1"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/hint_font_size" />

                        <ImageView
                            android:id="@+id/deptname_del"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="7dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/dt_standard_index_right_delete"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:id="@+id/view6"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    android:background="#FFDEDEDE"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="41dp"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_name"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/dt_standard_signin_user2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp">

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入真实姓名（查询公积金必填）"
                        android:textColor="#A1A1A1"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/hint_font_size" />

                    <ImageView
                        android:id="@+id/iv_del"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="7dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dt_standard_index_right_delete"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:background="#FFDEDEDE" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="41dp"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_card_id"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/dt_standard_signin_user2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp">

                    <EditText
                        android:id="@+id/et_card_id"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入证件号码（查询公积金必填）"
                        android:textColor="#A1A1A1"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/hint_font_size" />

                    <ImageView
                        android:id="@+id/card_id_del"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="7dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dt_standard_index_right_delete"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/tvok"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="20dp"
                android:background="@color/common_color"
                android:gravity="center"
                android:text="注册"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="注册代表同意"
                        android:textColor="@color/common_list_titlebar_font"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvUserProtorl"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="《用户服务协议》"
                        android:textColor="@color/common_color"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>