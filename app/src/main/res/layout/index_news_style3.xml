<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/lvItem_layout"
            android:layout_width="fill_parent"
            android:layout_height="90dp">

            <com.dingtai.base.view.BaseTextView
                android:id="@+id/txtNewsTitleStyle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:lineSpacingExtra="3dp"
                android:maxLines="2"
                android:text="副标题 副标题 副标题 副标题 副标题 副标题 副标题 副标题 副标题 副标题 "
                android:textColor="@color/common_list_titlebar_font"
                android:textSize="@dimen/news_main_title_size" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtNewsTitleStyle3">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginBottom="10dp">

                    <com.dingtai.base.view.BaseTextView
                        android:id="@+id/txtypeStyle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="12dp"
                        android:gravity="center_vertical"
                        android:text="  99"
                        android:textColor="@color/news_list_other_font"
                        android:textSize="14sp" />

                    <com.dingtai.base.view.BaseTextView
                        android:id="@+id/txtNewsSubscriptStyle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/txtypeStyle3"
                        android:gravity="center"
                        android:paddingBottom="1dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="1dp"
                        android:text="角标"
                        android:textColor="#31c37c"
                        android:textSize="10sp" />


                    <com.dingtai.base.view.BaseTextView
                        android:id="@+id/txtNewsReviewStyle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:drawableLeft="@drawable/list_reply"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:textColor="@color/news_list_other_font"
                        android:textSize="@dimen/index_subscript_size" />

                    <com.dingtai.base.view.BaseTextView
                        android:id="@+id/txtNewsZanStyle3"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="12dp"
                        android:layout_toRightOf="@id/txtNewsReviewStyle3"
                        android:drawableLeft="@drawable/list_shijian"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text=" 99"
                        android:textColor="@color/news_list_other_font"
                        android:textSize="@dimen/index_subscript_size"
                        android:visibility="gone" />
                </RelativeLayout>
            </FrameLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dt_list_item_underline"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>