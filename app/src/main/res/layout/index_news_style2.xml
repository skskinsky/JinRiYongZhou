<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <FrameLayout
                android:id="@+id/fra"
                android:layout_width="wrap_content"
                android:layout_height="65dp"

                android:layout_marginBottom="5dp">

                <ImageView
                    android:id="@+id/imgNewsPictureStyle2"
                    android:layout_width="123dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true" />

                <ImageView
                    android:id="@+id/img_play"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="left|bottom"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/zhibo_play"
                    android:visibility="gone" />
            </FrameLayout>

            <com.dingtai.base.view.BaseTextView
                android:id="@+id/txtNewsTitleStyle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/fra"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="7dp"
                android:layout_toRightOf="@id/fra"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:text="副标题 副标题 副标题 副标题 副标题 副标题 副标题 副标题 副标题 副标题 "
                android:textColor="@color/common_list_titlebar_font"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/fra"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="7dp"
                android:layout_toLeftOf="@id/txtNewsTitleStyle2"
                android:layout_toRightOf="@id/fra">

                <com.dingtai.base.view.BaseTextView
                    android:id="@+id/txtypeStyle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:text="  99"
                    android:textColor="@color/news_list_other_font"
                    android:textSize="12sp" />

                <com.dingtai.base.view.BaseTextView
                    android:id="@+id/txtNewsSubscriptStyle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/txtypeStyle2"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="1dp"
                    android:text="角标"
                    android:textColor="#31c37c"
                    android:textSize="10sp" />


                <com.dingtai.base.view.BaseTextView
                    android:id="@+id/txtNewsReviewStyle2"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"

                    android:drawableLeft="@drawable/coll_pl"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:text="角标"
                    android:textColor="@color/news_list_other_font"
                    android:textSize="@dimen/index_subscript_size"
                    android:visibility="gone" />

                <com.dingtai.base.view.BaseTextView
                    android:id="@+id/txtNewsZanStyle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/txtNewsReviewStyle2"
                    android:drawableLeft="@drawable/list_reply"
                    android:drawablePadding="2dp"
                    android:gravity="center_vertical"
                    android:text=" 99"
                    android:textColor="@color/news_list_other_font"
                    android:textSize="@dimen/index_subscript_size" />
            </RelativeLayout>
        </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/item_bg_color" />

</LinearLayout>