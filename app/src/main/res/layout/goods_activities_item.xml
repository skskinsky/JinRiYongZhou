<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imgActive"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="5dip"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/activities_tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgActive"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:background="#66000000"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="怀化新媒体发展中心"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:src="@drawable/hh_active_time" />

        <TextView
            android:id="@+id/tv_time_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_time"
            android:text="活动时间："
             android:textSize="13sp"
            android:textColor="@color/Text60GreyColor" />

        <ImageView
            android:id="@+id/imgState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/img_time"
            android:layout_marginRight="5dp"
            android:background="@drawable/hh_active_over" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/imgState"
            android:layout_toRightOf="@id/tv_time_flag"
            android:maxLines="2"
            android:text="fffffffff"
             android:textSize="13sp"
            android:typeface="sans"
            android:textColor="@color/Text60GreyColor" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:background="@drawable/hh_active_loc" />

        <TextView
            android:id="@+id/tv_lox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:text="活动地点"
            android:textSize="13sp"
            android:textColor="@color/Text60GreyColor" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/item_splite_color" />

</LinearLayout>